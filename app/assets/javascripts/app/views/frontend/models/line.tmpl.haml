%table.item
  %tr
    %td.image
      {{if image_thumb}}
      %img{:src => "${image_thumb}"}
      {{else}}
      .noimage
        %table
          %tr
            %td ${_jed("no image")}
      {{/if}}
    %td.name
      ${name}
    %td.manufacturer
      ${manufacturer}
    %td.overlay
      = link_to "/models/${id}", :class => "anchor" do
        .tiptarget
        .tip
          {{if image_thumb}}
          %img{:src => "${image_thumb}"}
          {{/if}}
          .text
            %h2
              ${name}
              %br
              %span.manufacturer
                ${manufacturer}
                
            {{if description}}
            %p.description
              ${description}
            {{else}}
            %p.description.none
              ${_jed("No description available for this model.")}
            {{/if}}
          %table.details
            {{each(i, property) properties}}
            {{if i < 4}}
            %tr
              %td.key
                ${property.key}
              %td.value
                ${property.value}
            {{/if}}
            {{/each}}
      
    %td.availability
      %span.max_available
      = "/ ${total_borrowable}"
    %td.add
      =#FIXME link_to "+", "/models/${id}/book", :class => "button small green", :title => _("Book this")
