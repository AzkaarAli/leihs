{{if sublines}}
{{each sublines}}
= hidden_field("line_ids", "", :value => "${$value.id}")
{{/each}}
{{else}}
= hidden_field("line_ids", "", :value => "${id}")
{{/if}}
%ul.line
  .main
    %li.amount
      ${quantity}
      {{if (type != "option_line")}} 
      = "/"     
      %span.grey.available
        %span.number ${availability_for_inventory_pool.max_available}
        ${_jed("available")}
      {{/if}}
    %li.name
      %strong
        ${model.name}