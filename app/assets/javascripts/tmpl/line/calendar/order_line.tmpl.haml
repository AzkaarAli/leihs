= hidden_field("line_ids", "", :value => "${id}")
%ul.line
  .container
    %li.amount
      ${quantity} /          
      %span.grey
        ="${total_rentable}"
        = _("total rentable")
    %li.name
      %strong
        ${model.name}
  %li.actions
    .multibutton
      .alternatives
        .trigger
          .arrow
        = link_to "/backend/inventory_pools/${current_inventory_pool}/acknowledge/${order.id}/update_lines?line_ids[]=${id}&delete_line_ids[]=${id}",
        :class => "button red",
        :method => "post",
        :remote => "true",
        :"data-rel" => "tmpl/dialog/order_line/delete",
        :"data-dialog_class" => "order_line",
        :"data-on_success" => 'List.remove_line({"element": $(this).parents(".line"), "color": "red"})' ,
        :"data-ref_for_dialog" => "$(this).closest('.line').tmplItem().data" do
          .icon.delete
          = _("Delete")
          
      = link_to "", 
      :class => "button white open_dialog", 
      :"data-rel" => "tmpl/dialog/calendar/edit_single", 
      :"data-dialog_class" => "calendar",
      :"data-on_success" => '',
      :"data-ref_for_dialog" => "$(this).closest('.line').tmplItem().data" do
        .icon.swap
        = _("Change Item")