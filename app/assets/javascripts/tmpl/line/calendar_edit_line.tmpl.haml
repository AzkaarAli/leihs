%ul.line
  .container
    %li.selection
      %label
        %input{:id => "selected_line_${id}", :name => "selected_line_${id}", :type => "checkbox", :value => "1", :checked => "checked"}
    %li.name
      %strong
        ${model.name}
    %li.amount
      ${quantity} /          
      %span.grey
        ="${total_rentable}"
        = _("total rentable")
  %li.actions
    .multibutton
      .alternatives
        .trigger
          .arrow
        = link_to "", :class => "button red" do
          .icon.delete
          = _("Delete")
        
      = link_to "/backend/inventory_pools/${current_inventory_pool}/users/${order.user_id}/acknowledge/${order.id}/update_lines", 
                :class => "button white open_dialog", 
                :"data-rel" => "tmpl/dialog/calendar/edit_single", 
                :"data-dialog_class" => "calendar",
                :"data-on_success" => '',
                :"data-ref_for_dialog" => "$(this).closest('.line').tmplItem().data" do
        .icon.swap
        = _("Change")