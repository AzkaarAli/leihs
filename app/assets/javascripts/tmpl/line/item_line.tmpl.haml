%ul{:class => "line ${type}{{if is_available && is_valid}} valid{{/if}}"}
  .container  
    %li.select
      %label
        %input{:type => "checkbox", :checked => "{{if is_valid && is_available}}checked{{else}}{{/if}}"}
        
    %li.inventory_code
      %form{:action => "/backend/inventory_pools/${current_inventory_pool}/users/${user.id}/hand_over/assign_inventory_code", :method => :post}
        
    %li.name
      ${model.name}
