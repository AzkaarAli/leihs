%ul{:class => "line ${type}{{if is_package}} package{{/if}}"}
    
  .main
    
    %li.toggle{:"data-toggle_target" => "#model_${id}_items"}
      .text{:title => "{{if is_package}}#{_("show packages")}{{else}}#{_("show items")}{{/if}}", :"data-open_title" => _("hide items")}
        ${items.length}
        .icon
    
    %li.image
      .container
        {{if image_thumb}}
        %img{:src => "${image_thumb}"}
        {{else}}
        .noimage
          = _("no image")
        {{/if}}
      
    %li.modelname
      ${name}
      {{if is_package}}
      .package.icon{:title => _("this is a package")}
      {{/if}}
      
    %li.availability
      ${total_rentable_in_stock}
      = "/"
      ${total_rentable}
  
  .actions    
    %li.actions
      .multibutton
        .alternatives
          .trigger
            .arrow
          = link_to "/backend/inventory_pools/${current_inventory_pool}/models/${id}/edit",  :class => "button white" do
            .icon.edit
            = _("Edit")
        = link_to "/backend/inventory_pools/${current_inventory_pool}/models/${id}", :class => "button white" do
          .icon.view_model
          {{if is_package}}
          = _("View Package")
          {{else}}
          = _("View Model")
          {{/if}}

{{if items}}
.items{:id => "model_${id}_items"}
  {{tmpl(items) "tmpl/line/item"}}
{{/if}}

