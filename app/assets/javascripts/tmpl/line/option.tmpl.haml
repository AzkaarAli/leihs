%ul.line{:class => "${type}"}
  
  .main
    
    %li.inventory_code{:title => _("Inventory Code")}
      ${inventory_code}
      
    %li.modelname
      ${name}

    %li.price{:title => _("Price")}
      {{if price}}
      ${accounting.formatMoney(parseFloat(price))}
      {{/if}}
  
  .actions    
    %li.actions
      .multibutton
        .alternatives
          .trigger
            .arrow
          = link_to "/backend/inventory_pools/${current_inventory_pool}/options/${id}/edit",  :class => "button white" do
            .icon.edit
            ${_jed("Edit")}
        = link_to "/backend/inventory_pools/${current_inventory_pool}/options/${id}", :class => "button white" do
          .icon.view_model
          ${_jed("View Option")}