%ul.line{:class => "${type}"}
  = link_to "javascript:void(0)" do #TODO: /backend/inventory_pools/${current_inventory_pool}/users/${id}
  
    {{tmpl($item.data.user) "tmpl/cell/user_name"}}
  
    %li.city
      {{if city}}
      ${city}
      {{else}}
      %span.grey
        = "-"
      {{/if}}
  
    %li.phone
      %span.text
        = _("Phone:")
      {{if phone}}
      %span.digits
        ${phone}
      {{else}}
      %span.grey
        = "-"
      {{/if}}
  
    {{if badge_id}}
    %li.badge
      = _("Badge:")
      ${badge_id}
    {{/if}}
  
  %li.actions
    .multibutton
      .alternatives
        .trigger
          .arrow
        = mail_to "${email}", "<div class='icon send'></div>#{_('E-Mail')}".html_safe, :class => "button white"
      = link_to "javascript:void(0);", :onclick => "alert('Diese Funktion wird bald implementiert...');", :class => "button white" do #TODO: /backend/inventory_pools/${current_inventory_pool}/users/${id}/new_contract
        .icon.hand_over
        = _("Hand Over")