%ul.line{:class => "${type}"}
  
  .main
  
    {{tmpl($item.data.user) "tmpl/cell/user_name"}}
        
    %li.number
      = _("No.")
      ${id}
      
    %li.date
      ${moment(created_at).format(i18n.date.L)}
  
    {{tmpl($item.data) "tmpl/cell/items"}}
  
    %li.status_with_date
      {{if status_const == 1}}
      = _("Unsigned (Hand Over)")
      {{/if}}
      {{if status_const == 2}}
      = _("Open")
      {{/if}}
      {{if status_const == 3}}
      = _("Closed")
      {{/if}}
      %span.grey
        ${moment(updated_at).format(i18n.date.L)}
  
  .actions    
    %li.actions
      {{if status_const == 2}}
      .multibutton
        .alternatives
          .trigger
            .arrow
          = link_to "#", :class => "button white open_dialog",
            :"data-rel" => "tmpl/dialog/documents/contract",
            :"data-url_for_dialog" => "/backend/inventory_pools/${current_inventory_pool}/contracts/${id}.json",
            :"data-dialog_id" => "print",
            :"data-dialog_class" => "documents value_list" do
            .icon.contract
            = _("Contract")
          = link_to "#", :class => "button white open_dialog",
            :"data-rel" => "tmpl/dialog/documents/value_list",
            :"data-url_for_dialog" => "/backend/inventory_pools/${current_inventory_pool}/contracts/${id}.json",
            :"data-dialog_id" => "print",
            :"data-dialog_class" => "documents value_list" do
            .icon.valuelist  
            = _("Value List")
        = link_to "/backend/inventory_pools/${current_inventory_pool}/users/${user.id}/take_back", :class => "button white" do
          .icon.take_back
          = _("Take Back")
      {{/if}}
      
      {{if status_const == 3}}
      .multibutton
        .alternatives
          .trigger
            .arrow
          = link_to "#", :class => "button white open_dialog",
            :"data-rel" => "tmpl/dialog/documents/value_list",
            :"data-url_for_dialog" => "/backend/inventory_pools/${current_inventory_pool}/contracts/${id}.json",
            :"data-dialog_id" => "print",
            :"data-dialog_class" => "documents value_list" do
            .icon.valuelist  
            = _("Value List")
        = link_to "#", :class => "button white open_dialog",
          :"data-rel" => "tmpl/dialog/documents/contract",
          :"data-url_for_dialog" => "/backend/inventory_pools/${current_inventory_pool}/contracts/${id}.json",
          :"data-dialog_id" => "print",
          :"data-dialog_class" => "documents contract" do
          .icon.contract
          = _("Contract")
      {{/if}}
    