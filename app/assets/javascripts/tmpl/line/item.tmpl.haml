%ul{:class => "line ${type}{{if children}} package{{/if}}"}

  .main
    
    {{if children}}
    %li.toggle{:"data-toggle_target" => "#item_${id}_children"}
      .text{:title => _("show package parts")}
        .icon
        ${children.length}
    {{/if}}
    
    {{if $item.package}}     
    %li.inventory_code{:title => _("Inventory Code")}
      ${inventory_code}
    {{if model}}
    %li.modelname
      ${model.name}
    {{/if}}
    {{else}}
    {{if model}}
    %li.modelname
      ${model.name}
    {{/if}}
    %li.inventory_code{:title => _("Inventory Code")}
      ${inventory_code}
    {{/if}}
  
    {{if current_borrower}}
    %li.item_location.borrower
      .hand_over.icon
      %span
        ${current_borrower.firstname} ${current_borrower.lastname} 
        = _("until")
        ${moment(current_return_date).format(i18n.date.L)}
    {{else}}
    %li.item_location
      ${$item.data.location}
    {{/if}}
    
    %li.item_status      
      {{if is_broken}}
      %span.red
        %b= _("Broken")
      {{/if}}
      
      {{if is_incomplete}}
      {{if is_broken}}
      = ", "
      {{/if}}
      %span.red
        %b= _("Incomplete")
      {{/if}}
    
  .actions  
    %li.actions
      .multibutton
        .alternatives
          .trigger
            .arrow
          = link_to "/backend/inventory_pools/${current_inventory_pool}/items/${id}/edit", :class => "button white" do
            .icon.edit
            = _("Edit")
          = link_to "/backend/inventory_pools/${current_inventory_pool}/items/${id}/retire", :class => "button white" do
            .icon.retire
            = _("Retire")
        = link_to "/backend/inventory_pools/${current_inventory_pool}/items/${id}", :class => "button white" do
          .icon.view_item
          = _("View Item")
          
{{if children}}
.children{:id => "item_${id}_children"}
  {{tmpl(children, {package: true}) "tmpl/line/item"}}
{{/if}}
