%ul{:class => "line ${type} take_back"}
  
  .main  
    %li.select
      %label
        %input{:type => "checkbox"}
    %li.inventory_code
      ${item.inventory_code}
    %li.name
      %strong ${model.name}
    {{tmpl(purpose) "tmpl/cell/purpose"}}
    
  .actions     
    %li.actions
      = link_to "#", :class => "button white open_dialog",
      :"data-rel" => "tmpl/dialog/documents/contract",
      :"data-url_for_dialog" => "/backend/inventory_pools/${current_inventory_pool}/contracts/${contract.id}.json",
      :"data-dialog_id" => "print",
      :"data-dialog_class" => "documents value_list" do
        .contract.icon
        = _("Contract %s") % ["${contract.id}"]