%ul.line{:class => "${type} ${contract.action}"}
  
  .main
    %li.select
      %label
        = check_box_tag "selected"
    %li.quantity
      %input{:type => "text", :value => "", :autocomplete => "off"}
    %li.max_quantity
      = "/${quantity}"
    %li.inventory_code
      ${item.inventory_code}
    %li.name
      %strong ${model.name}
      
  .actions     
    %li.actions
      .multibutton
        .alternatives
          .trigger
            .arrow
          = link_to "/backend/inventory_pools/${current_inventory_pool}/users/${contract.user.id}/take_back/update_lines",
          :class => "button white open_dialog", 
          :"data-tmpl" => "tmpl/dialog/calendar/edit_single", 
          :"data-dialog_class" => "calendar",
          :"data-on_success" => 'HandOver.update_visits(response);',
          :"data-dialog_ready" => "new BookingCalendar({computeAvailability: false})",
          :"data-ref_for_dialog" => "$(this).closest('.line').tmplItem().data" do
            .icon.timerange
            = _("Edit")
            
        = link_to "#", :class => "button white open_dialog",
        :"data-tmpl" => "tmpl/dialog/documents/contract",
        :"data-url_for_dialog" => "/backend/inventory_pools/${current_inventory_pool}/contracts/${contract.id}.json",
        :"data-dialog_id" => "print",
        :"data-dialog_class" => "documents value_list" do
          .contract.icon
          = _("Contract %s") % ["${contract.id}"]
