= link_to "/backend/inventory_pools/${current_inventory_pool}/users/${user.id}/acknowledge/${id}" do

  %li.name.hastip
    ${user.firstname}
    ${user.lastname}
    .tip.user
      %table
        %tr
          %td.key
            %p
              = _("Phone")
          %td.value
            %p
              ${user.phone}
        %tr
          %td.key
            %p
              = _("E-Mail")
          %td.value
            %p
              ${user.email}

  %li.items.hastip
    %span.number
      ${quantity}
    = _("Items")
    .tip.lines
      ${$startdate = 0, ""}
      ${$enddate = 0, ""}
      {{each(i, line) order_lines}}
      {{if line.start_date != $startdate || line.end_date != $enddate}}
      ${$startdate = line.start_date, ""}
      ${$enddate = line.end_date, ""}
      {{if i != 0}}
      %hr
      {{/if}}
      .date
        {{html formatDate(new Date(line.start_date.replace(/-/g, "/")), i18n.selected.tips.dateFormat)}}
        = "-"
        {{html formatDate(new Date(line.end_date.replace(/-/g, "/")), i18n.selected.tips.dateFormat)}}
      .range
        ${Math.round((new Date(line.end_date.replace(/-/g, "/")) - new Date(line.start_date.replace(/-/g, "/"))) / (1000 * 60 * 60 * 24))}
        = _("Days")
      .clear
      %table
        {{each(i, line) order_lines}}
        {{if line.start_date == $startdate && line.end_date == $enddate}}
        %tr
          %td.quantity
            ${line.quantity}
          %td.model_name
            ${line.model.name}
        {{/if}}
        {{/each}}  
      {{/if}}
      {{/each}}
        
  %li.range
    %span.number
      ${max_single_range}
      
    %span.text
      {{if max_single_range < 2}}
      = _("Day")
      {{else}}
      = _("Days max")
      {{/if}}
      
  {{if String(purpose).length > 70}}
  %li.purpose.hastip
    %span.text
      {{html String(purpose).substring(0, 70) }}
      {{if String(purpose).length > 70}}
      {{html "..."}}
      {{/if}}
    .tip
      %p
        ${purpose}
  {{else}}
  %li.purpose
    %span.text
      {{html String(purpose).substring(0, 70) }}
  {{/if}}
      
  {{if status_const == 3}}
  %li.approved_with_date
    = _("Approved")
    %span.grey
      ({{html formatDate(new Date(updated_at.replace(/T.*$/g, "").replace(/-/g, "/")), i18n.selected.tips.dateFormat)}})
  {{/if}}
  
  {{if status_const == 4}}
  %li.approved_with_date
    = _("Rejected")
    %span.grey
      ({{html formatDate(new Date(updated_at.replace(/T.*$/g, "").replace(/-/g, "/")), i18n.selected.tips.dateFormat)}})
  {{/if}}
      
{{if status_const == 2}}
%li.actions
  = link_to "/backend/inventory_pools/${current_inventory_pool}/users/${user.id}/acknowledge/${id}/reject", :class => "smallbutton red open_dialog", :rel => "tmpl/dialog/acknowledge/reject", :"data-dialog_class" => "acknowledge", :"data-ref_for_dialog" => "$(this).closest('.line').tmplItem().data" do
    .icon.delete
    = _("Decline")
    
  = link_to "/backend/inventory_pools/${current_inventory_pool}/users/${user.id}/acknowledge/${id}/approve", :class => "smallbutton white open_dialog", :rel => "tmpl/dialog/acknowledge/approve", :"data-dialog_class" => "acknowledge", :"data-ref_for_dialog" => "$(this).closest('.line').tmplItem().data"  do
    = _("Approve")
    .icon.approve
{{/if}}
  