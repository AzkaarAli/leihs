${$problems = Line.get_problems($item.data), ""}

%ul{:class => "line ${type}{{if $problems.length}} error{{/if}}", :"data-id" => "${id}"}
  
  .main
  
    %li.select
      %label
        = check_box_tag "selected"
        
    %li.amount
      %span.selected
        ${quantity}
      %span.grey
        ="/ ${availability_for_inventory_pool.max_available} #{_('available')}"
        
    %li.name
      %strong
        ${model.name}
      
      {{if model.package_models}}
      {{if model.package_models.length > 0}}
      %span.packaged_models.hastip
        %em
          = _("(%s Parts)") % "${model.package_models.length}"
        .tip.lines
          %table
            {{each(i, model) model.package_models}}
            %tr
              %td.model_name
                {{if model}}
                ${model.name}
                {{else}}
                %i
                  = _("Model not present any more")
                {{/if}}
            {{/each}}  
          
      {{/if}}
      {{/if}}
    
    {{tmpl({problems: $problems}) "tmpl/line/problems"}}
  
  .actions    
    %li.actions
      .multibutton
        .alternatives
          .trigger
            .arrow
          = link_to "/backend/inventory_pools/${current_inventory_pool}/models/${model.id}/timeline", :class => "button white open_dialog",
          :"data-tmpl" => "tmpl/dialog/availability/timeline",
          :"data-ref_for_dialog" => "$(this).closest('.line').tmplItem().data",
          :"data-dialog_class" => "full_width timeline" do
            .icon.timeline
            = _("Timeline")
          = link_to "/backend/inventory_pools/${current_inventory_pool}/acknowledge/${order.id}/remove_lines?line_ids[]=${id}",
          :class => "button red",
          :method => "delete",
          :remote => "true",
          :"data-tmpl" => "tmpl/dialog/order_line/delete",
          :"data-dialog_class" => "order_line",
          :"data-on_success" => 'Acknowledge.remove_lines([$(this).parents(".line")]);' ,
          :"data-ref_for_dialog" => "$(this).closest('.line').tmplItem().data" do
            .icon.delete
            = _("Delete")
            
        = link_to "/backend/inventory_pools/${current_inventory_pool}/acknowledge/${order.id}/update_lines",
          :class => "button white open_dialog", 
          :"data-tmpl" => "tmpl/dialog/calendar/edit_single", 
          :"data-dialog_class" => "calendar",
          :"data-on_success" => 'Acknowledge.update_order(response);',
          :"data-dialog_ready" => "new BookingCalendar({limitMaxQuantity: false, showCulprit: true})",
          :"data-ref_for_dialog" => "$(this).closest('.line').tmplItem().data" do
          .icon.timerange
          = _("Edit")
      