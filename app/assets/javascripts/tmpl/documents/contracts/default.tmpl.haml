${$returned_lines = Line.get_returned(lines), ""}
${$not_returned_lines = Line.get_not_returned(lines), ""}

.contract

  .barcode
    %img{:src => "${barcode}"}
  
  %h1= _("Leihvertrag Nr. %s") % ["${id}"]
  .date
    ${$now = moment(),""}
    ${$now.format(i18n.date.L)}
    
  %section.parties
    .customer
      %label= _("Ausleihender")
      %span.name ${user.firstname} ${user.lastname} 
      %span.street ${user.address}
      %span.plz_city ${user.zip} ${user.city}
    .inventory_pool
      %label= _("Verleiher")
      %span.name ${inventory_pool.name}
      {{if inventory_pool.address}}
      %span.street ${inventory_pool.address.street}
      %span.plz_city ${inventory_pool.address.country_code}-${inventory_pool.address.zip_code} ${inventory_pool.address.city}
      {{/if}} 
    .clear
  
  {{if $returned_lines.length}}
  %section.list.returned_items
    %h2= _("Zurückgebene Gegenstände")
    %table
      %thead
        %tr
          %td.quantity= _("Anzahl")
          %td.inventory_code= _("Inventarcode")
          %td.model_name= _("Model")
          %td.start_date= _("Start-Datum")
          %td.end_date= _("End-Datum")
          %td.returning_date= _("Rückgabe")
      %tbody
        {{each(i,line) $returned_lines}}
        %tr  
          %td.quantity ${line.quantity}
          %td.inventory_code ${line.item.inventory_code}
          %td.model_name ${line.model.name}
          %td.start_date ${moment(line.start_date).format(i18n.date.L)}
          %td.end_date ${moment(line.end_date).format(i18n.date.L)}
          %td.returning_date ${moment(line.returned_date).format(i18n.date.L)}
        {{/each}}
  {{/if}}
  
  {{if $not_returned_lines.length}}
  %section.list.not_returned_items
    %h2= _("Ausgeliehene Gegenstände")
    %table
      %thead
        %tr
          %td.quantity= _("Anzahl")
          %td.inventory_code= _("Inventarcode")
          %td.model_name= _("Model")
          %td.start_date= _("Start-Datum")
          %td.end_date= _("End-Datum")
          %td.returning_date= _("Rückgabe")
      %tbody
        {{each(i,line) $not_returned_lines}}
        %tr
          %td.quantity ${line.quantity}
          %td.inventory_code ${line.item.inventory_code}
          %td.model_name ${line.model.name}
          %td.start_date ${moment(line.start_date).format(i18n.date.L)}
          %td.end_date ${moment(line.end_date).format(i18n.date.L)}
          %td.returning_date
        {{/each}}
  {{/if}}
  
  .dontbreak
    %section.purposes
      %h2= _("Zweck dieser Ausleihe")
      %p ${Line.concatinate_purposes(lines)}
    %section.note
      {{if note}}
      %h2= _("Zusätzliche Notiz")
      %p ${note}
      {{/if}}
    %section.terms_and_signature
      %p.terms= _("Es gelten die Ausleih- und Benutzungsreglemente des Verleihers.")
      %hr
      %span= _("Unterschrift")
      