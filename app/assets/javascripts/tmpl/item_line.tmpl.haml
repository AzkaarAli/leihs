= link_to "backend/inventory_pools/${current_inventory_pool}/items/${id}" do
  
  %li.modelname
    ${model.name}
    
  %li.inventory_code
    ${inventory_code}

  %li.serial_number
    ${serial_number}
    
  {{if $item.data["in_stock?"]}}
  %li.stock
    = _("In Stock")
  {{else}}
  %li.stock
    ${current_borrower.firstname}
    ${current_borrower.lastname}
    %span.digits
      &raquo;
      {{html formatDate(new Date(current_return_date.replace(/-/g, "/")), i18n.selected.tips.dateFormat)}}
  {{/if}}
    
  %li.status
    {{if is_broken}}
    %span.red
      %b= _("Broken")
    {{/if}}
    {{if is_incomplete}}
    {{if is_broken}}
    = ", "
    {{/if}}
    %span.red
      %b= _("Incomplete")
    {{/if}}
    
%li.actions
  = link_to "backend/inventory_pools/${current_inventory_pool}/items/${id}/retire", :class => "smallbutton white" do
    = _("Retire")
    .icon.retire
