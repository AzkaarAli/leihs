%h1
  %strong
    ${model.name}
%p.subtitle
  = "Ordered by"
  %strong
    ${order.user.firstname}
    ${order.user.lastname}
.navigation
  %button.button.white.close_dialog
    .icon.return
    = _("Revert")
  %button.button.green{:type => "submit", :"data-on_success" => '${$item.on_success}'}
    = _("Confirm")
%hr

.inventorypool.container
  %label{:for => "inventory_pool_id"}
    = _("Equipment Park")
  %span.select
    %span.name
      = #o.first[2][:"data-name"]
    .arrow
  = select_tag :inventory_pool_id#, options_for_select(o, s)

.date.container
  .from
    %label{:for => "start_date"}
      = _("From")
    = text_field_tag :start_date, "2011-11-11" #Date.today
  .dash
    = "-"
  .to
    %label{:for => "end_date"}
      = _("To")
    = text_field_tag :end_date, "2011-11-11" #Date.tomorrow
      
.quantity.container
  %label{:for => "quantity"}
    = _("Quantity")
  = text_field_tag :quantity, 1, :min => 1, :max => "@model.borrowable_items.size"
  = link_to "javascript:void(0)", :class => "increase" do
    %span.icon
  = link_to "javascript:void(0)", :class => "decrease" do
    %span.icon
        
.clear

