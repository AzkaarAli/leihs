${$purposes = Line.concatinate_purposes(SelectedLines.lines_data), ""}

= form_tag '${$item.action}', :remote => true, :"data-submit_button" => true, :class => "summary" do

  %h1
    = _("Hand Over to")
    ${Line.get_user(SelectedLines.lines_data[0]).name}
  %p.subtitle
    {{html Underscore.reduce(SelectedLines.lines_data, function(mem, ele){ return mem+ele.quantity;}, 0)}}
    = "Items"
  
  .navigation
    %button.button.white.close_dialog
      .icon.return
      = _("Back")
    %button.button.green{:type => "submit", :"data-on_success" => '${$item.on_success}'}
      = _("Hand Over")
  
  %section{:class => "purpose{{if $purposes.length==0}} none{{/if}}"}
    %label= _("Purpose")
    %p ${$purposes}
    {{if HandOver.any_missing_purpose(SelectedLines.lines_data)}}
    %button.button.white
      = _("Add Purpose")
    {{/if}}
    .clear
    %section.add_purpose
      %textarea#purpose.focus{:type => :text, :name => "purpose"}
      %p.hint= _("Please provide a purpose...")
 
  %hr
  %section.lines.scalable
    
    ${$grouped_lines = new GroupedLines(Line.prepare_for_handover(SelectedLines.lines_data, new Date())), ""}
    {{tmpl($grouped_lines) "tmpl/dialog/summary/linegroup"}}
    
  %section.note
    %textarea#comment.focus{:name => "note"}
    %p.hint= _("Write a note... (the note will be part of the contract)")
  