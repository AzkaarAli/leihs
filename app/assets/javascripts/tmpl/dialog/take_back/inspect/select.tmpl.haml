%span.select
  %span.name
    ${label}
  .arrow
  %select{:name => "flags[${name}]"}
    {{each(i, option) options}}
    {{if ((selected == true && option.value == 1) || (selected == false && option.value == 0))}}
    %option{:value => "${option.value}", :selected => true}
      ${option.label}
    {{else}}
    %option{:value => "${option.value}"}
      ${option.label}
    {{/if}}
    {{/each}}