.date_range
  .date
    ${moment(start_date).format(i18n.date.L)} - ${moment(end_date).format(i18n.date.L)}
  .range
    ${moment(end_date).diff(moment(start_date), "days")}
    = _("Days")
    
.clear
.list
  {{each(i, line) lines}}
  %input{:type => :hidden, :name => "line_ids[]", :value => "${line.id}"}
  %ul{:class => "line {{if !line.is_available}} unavailable{{/if}}"}
    .main
      %li.quantity
        ${line.quantity}
      %li.model
        ${line.model.name}
    {{if !line.is_available}}
    %li.problems
      = _("Problems")
    {{/if}}
  {{/each}}  