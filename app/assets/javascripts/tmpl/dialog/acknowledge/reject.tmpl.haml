= form_tag '${$item.action}', :remote => true do
  %h1
    = _("Order from")
    ${user.firstname} ${user.lastname}
  %p.subtitle= '${purpose}'
  
  .navigation
    %button.button.white.close_dialog
      .icon.return
      = _("Back")
    %button.button.red{:type => "submit", :"data-on_success" => '${$item.on_success}'}
      = _("Reject")
      
  .flash_message
  
  %hr
  
  %section.lines.scalable
    ${$grouped_lines = new GroupedLines(lines), ""}
    {{tmpl($grouped_lines) "tmpl/dialog/acknowledge/lines"}}
  
  %section.comment
    = text_area_tag "comment", "", :class => "focus"
    %p.hint
      = _("Write a comment... (your comment will be part of the rejection e-mail)")
