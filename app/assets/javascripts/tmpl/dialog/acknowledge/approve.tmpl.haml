= form_tag '${$item.action}', :remote => true do

  {{tmpl($item.data) "tmpl/cell/dialog_order_head"}}
  
  .navigation
    %button.button.white.close_dialog
      .icon.return
      = _("Back")
    {{if $item.error}}
    .multibutton
      .alternatives
        .trigger
          .arrow
        %button.button.white{:type => "submit", :"data-on_success" => '${$item.on_success}', :name => "force", :value => true}
          .icon.approve
          = _("Approve anyway")
      
      ${$link_to = "/backend/inventory_pools/"+current_inventory_pool+"/acknowledge/"+id, ""}
      {{if location.href.match($link_to)}}
      ${$link_class = "close_dialog", ""}
      {{/if}}
      = link_to "", :class => "button white{{if $link_class}} ${$link_class}{{/if}}" do
        .icon.edit
        = _("Edit this Order")
    {{else}}
    %button.button.green{:type => "submit", :"data-on_success" => '${$item.on_success}'}
      = _("Approve")
    {{/if}}
  
  {{if $item.error}}
  .flash_message.visible
    ${$item.error}
  {{else}}
  .flash_message
  {{/if}}
  
  {{tmpl($item.data) "tmpl/cell/dialog_purpose"}}
  
  {{tmpl($item.data) "tmpl/cell/dialog_lines"}}
    
  %section.comment
    = text_area_tag "comment", "", :class => "focus"
    %p.hint= _("Write a comment... (your comment will be part of the confirmation e-mail)")