= form_tag '${$item.action}', :remote => true, :"data-submit_button" => true, :class => "summary" do

  %h1
    = _("Order from")
    ${user.firstname} ${user.lastname}
  %p.subtitle= "${quantity} Items for max. ${new MaxRange(lines).value} days straight"
  
  .navigation
    %button.button.white.close_dialog
      .icon.return
      = _("Back")
    {{if $item.error}}
    .multibutton
      .alternatives
        .trigger
          .arrow
        %button.button.white{:type => "submit", :"data-on_success" => '${$item.on_success}', :name => "force", :value => true}
          .icon.approve
          = _("Approve anyway")
      
      ${$link_to = "/backend/inventory_pools/"+current_inventory_pool+"/acknowledge/"+id, ""}
      {{if location.href.match($link_to)}}
      ${$link_class = "close_dialog", ""}
      {{/if}}
      = link_to "${$link_to}", :class => "button white{{if $link_class}} ${$link_class}{{/if}}" do
        .icon.edit
        = _("Edit this Order")
    {{else}}
    %button.button.green.hide_on_error{:type => "submit", :"data-on_success" => '${$item.on_success}'}
      = _("Approve")
      
    %button.button.white.show_on_error{:type => "submit", :"data-on_success" => '${$item.on_success}', :name => "force", :value => true}
      .icon.approve
      = _("Approve anyway")
    {{/if}}
  
  {{if $item.error}}
  .flash_message.visible
    ${$item.error}
  {{else}}
  .flash_message
  {{/if}}
  
  %section.purpose
    %label= _("Purpose")
    %p= "${purpose.description}"  
  
  %hr
  %section.lines.scalable
    ${$grouped_lines = GroupedLines.merge_date_ranges(lines), ""}
    {{tmpl($grouped_lines) "tmpl/dialog/summary/linegroup"}}
    
  %section.comment
    = text_area_tag "comment", "", :class => "focus"
    %p.hint= _("Write a comment... (your comment will be part of the confirmation e-mail)")