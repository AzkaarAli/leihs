= form_tag '${$item.target_url}', :remote => true, :"data-submit_button" => true, :class => "summary" do

  %h1
    ${_jed("Order from")}
    ${user.firstname} ${user.lastname}

  %p.subtitle 
    ${quantity}
    ${_jed(quantity, "Item", "Items")}
    ${_jed("for max.")}
    ${$range = App.Line.getMaxRange(lines), ""}
    ${$range}
    ${_jed($range,"day", "days in a row")}
  
  .navigation
    %button.button.white.close_dialog
      .icon.return
      ${_jed("Back")}
    {{if $item.error}}
    .multibutton
      .alternatives
        .trigger
          .arrow
        %button.button.white{:type => "submit", :"data-on_success" => '${$item.on_success}', :name => "force", :value => true}
          .icon.approve
          ${_jed("Approve anyway")}
      
      ${$link_to = "/backend/inventory_pools/"+currentInventoryPool.id+"/acknowledge/"+id, ""}
      {{if location.href.match($link_to)}}
      ${$link_class = "close_dialog", ""}
      {{/if}}
      = link_to "${$link_to}", :class => "button white{{if $link_class}} ${$link_class}{{/if}}" do
        .icon.edit
        ${_jed("Edit this Order")}
    {{else}}
    %button.button.green.hide_on_error{:type => "submit", :"data-on_success" => '${$item.on_success}'}
      ${_jed("Approve")}
      
    %button.button.white.show_on_error{:type => "submit", :"data-on_success" => '${$item.on_success}', :name => "force", :value => true}
      .icon.approve
      ${_jed("Approve anyway")}
    {{/if}}
  
  {{if $item.error}}
  .flash_message.visible
    ${$item.error}
  {{else}}
  .flash_message
  {{/if}}
  
  %section.purpose.highlighted
    %label ${_jed("Purpose")}
    %p ${purpose.description}
  
  %hr
  %section.lines.scalable
    ${$grouped_lines = App.Line.groupByDateRanges(lines), ""}
    {{tmpl($grouped_lines) "tmpl/dialog/summary/linegroup"}}
    
  %section.comment
    = text_area_tag "comment", "", :class => "focus"
    %p.hint ${_jed("Write a comment... (your comment will be part of the confirmation e-mail)")}
