%h1
  %strong
    = _("Error")

%p.subtitle
  = _("while deleting order line for")
  %strong
    ${order.user.firstname}
    ${order.user.lastname}

.navigation
  %a.button.white.close_dialog
    .icon.return
    = _("Go Back")
    
%hr

{{if $item.error}}
.flash_message.visible
  ${$item.error}
{{/if}}

%section.lines.scalable
  ${$startdate = 0, ""}
  ${$enddate = 0, ""}
  {{each(i, line) lines}}
  {{if line.start_date != $startdate || line.end_date != $enddate}}
  ${$startdate = line.start_date, ""}
  ${$enddate = line.end_date, ""}
  .topline
    .date
      {{html moment(line.start_date).format(i18n.date.L)}}
      = "-"
      {{html moment(line.end_date).format(i18n.date.L)}}
    .range
      ${moment(line.start_date).sod().diff(moment(line.end_date).eod(), "days")}
      = _("Days")
  .clear
  .list
    {{each(i, line) lines}}
    {{if line.start_date == $startdate && line.end_date == $enddate}}
    %ul.line
      .container
        %li.quantity
          ${line.quantity}
        %li.model
          ${line.model.name}
    {{/if}}
    {{/each}}  
  {{/if}}
  {{/each}}
