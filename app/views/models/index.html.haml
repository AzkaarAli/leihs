= render :partial => '/layouts/frontend/00-patterns/tabs'
= render :partial => '/layouts/frontend/00-patterns/content_box_head'

- if @category.try(:children).blank? and @template.try(:children).blank?
  .inner.fullwidth#models
- else
  .inner#models
  
    - if @category
      - unless @category.children.empty?
        %ul#categories
          - @category.children.each do |c|
            %li
              %h2
                = link_to c, category_models_path(c), :title => c
              %ul
                - c.children.each do |child|
                  %li
                    = link_to child, category_models_path(child) , :title => child
                    
      - unless @category.all_templates.empty?
        %ul#templates
          - @category.all_templates.each do |t|
            %li
              %h2
                = link_to t, template_models_path(t), :title => t
              %ul
                - t.children.each do |child|
                  %li
                    = link_to child, template_models_path(child) , :title => child
    
    - elsif @template
      - unless @template.children.empty?
        %ul#categories
          - @template.children.each do |t|
            %li
              %h2
                = link_to t, template_models_path(t), :title => t
              %ul
                - t.children.each do |child|
                  %li
                    = link_to child, template_models_path(child) , :title => child
                    
    = render :partial => 'topfilter'
    
    %section#modellist
      - @models.each do |m|
        %table.item
          %tr
            %td.image
              - unless m.images.empty?
                = link_to image_tag("http://leihs.zhdk.ch/#{m.image_thumb}"), m
            %td.name
              = link_to m.name, m
            %td.manufacturer
              = link_to m.manufacturer, m
            %td.overlay
              .imageanchorContainer                           
                = link_to "", m, :class=>"imageanchor"
                .hover
                  .header 
                    .borderleft
                    .headerinner
                    .borderright
                  .inner
                    - unless m.images.empty?
                      = link_to image_tag("http://leihs.zhdk.ch/#{m.image}") + content_tag(:span, _("view"), :class=>"topright"), m
                    - unless m.description.blank?
                      %p.description
                        = truncate(m.description, 120)
                    - unless m.properties.empty?
                      %table.details
                        - m.properties.each_with_index do |p, i|
                          - if i < 5
                            %tr
                              %td.key
                                = p.key
                              %td.value
                                = p.value
                    .borderleft
                      .arrow
                    .borderright
                      .arrow
                  
                  .footer
                    .borderleft
                    .footerinner
                    .borderright
              = link_to "", m, :class=>"itemanchor"
            %td.availability
              = render :partial => 'availability', :locals => {:model => m}
            %td.add
              = link_to "+", book_model_path(m), :class => "smallbutton green"

    .clear
      
= render :partial => '/layouts/frontend/00-patterns/content_box_foot'
= render :partial => '/layouts/frontend/00-patterns/aside'

:javascript
  $(document).ready(function(){
    ModelsListItems.setup();
  });
  
  var ModelsListItems = new ModelsListItems();
  
  function ModelsListItems() {
      
      this.hovering = false;
      this.hoveringMode = false;
      this.showDelayTimer;
      this.showDelay = 800;
      this.hoveringModeTimer;
      this.hoveringModeTimeout = 400;
            
      this.setup = function() {
        
        // MOUSEENTER (imageanchorContainer)
        $('#models #modellist .item .overlay .imageanchorContainer').bind('mouseenter', function(){
          var _this = $(this);
          $(this).data("over", true);
          ModelsListItems.hovering = true;
          
          if(ModelsListItems.hoveringMode) {
            // in hovering mode popup hover immediately
            $(this).find(".hover").hide(0, function(){
                if($(this).parent().data("over")) {
                    $(this).stop().show(0, function() {
                        ModelsListItems.checkPosition($(this));
                    });
                } else {
                    $(this).stop().hide();                    
                }
            });
          } else {
            // normaly having a timer delaying showing the hover
            ModelsListItems.showDelayTimer = setTimeout(function(){
              _this.find(".hover").hide(0, function(){
                ModelsListItems.hoveringMode = true;
                if($(this).parent().data("over")) {
                  $(this).stop().show(0, function() {
                      ModelsListItems.checkPosition($(this));
                  });
                } else {
                    $(this).stop().hide();                    
                }
              });
            }, ModelsListItems.showDelay);
          }
        });
        
        // MOUSELEAVE (imageanchorContainer)
        $('#models #modellist .item .overlay .imageanchorContainer').bind('mouseleave', function(){
            $(this).data("over", false);
            ModelsListItems.hovering = false;
            clearTimeout(ModelsListItems.showDelayTimer);
            $(this).find(".hover").stop().hide(0, function() {
                $(this).position({top: 0});
                $(this).removeAttr("style");
                $(this).find(".inner .borderleft .arrow").removeAttr("style");
                $(this).find(".inner .borderright .arrow").removeAttr("style");
            });
            $(this).find(".hover").delay(ModelsListItems.hoveringModeTimeout).hide(0, function() {
                if(!ModelsListItems.hovering) {
                    ModelsListItems.hoveringMode = false;
                }
            });
        });
      }
     
      this.checkPosition = function (_object) {
          $(_object).css("display", "block");
          
          if(window.pageYOffset > $(_object).offset().top){
              // top is higher then viewport
              $(_object).offset({top: window.pageYOffset + 5});
              
              // show or hide arrows dedicated to their position in the viewport
              if($(_object).parent().offset().top - window.pageYOffset < 0) {
                  $(_object).find(".inner .borderleft .arrow").hide();
                  $(_object).find(".inner .borderright .arrow").hide();
              } else {
                  $(_object).find(".inner .borderleft .arrow").show();
                  $(_object).find(".inner .borderright .arrow").show();
              }
              
              // positioning arrows
              $(_object).find(".inner .borderleft .arrow").offset({top: $(_object).parent().offset().top+14});
              $(_object).find(".inner .borderright .arrow").offset({top: $(_object).parent().offset().top+14});
          } else if(($(_object).parent().offset().top +  $(_object).height()) > (window.pageYOffset +  window.innerHeight)) {
              // bottom of object is lower then viewport
              $(_object).offset({top: (window.pageYOffset +  window.innerHeight - $(_object).height() - 15)});
              
              // show or hide arrows dedicated to their position in the viewport
              if($(_object).parent().offset().top > (window.pageYOffset +  window.innerHeight - 80)) {
                  $(_object).find(".inner .borderleft .arrow").hide();
                  $(_object).find(".inner .borderright .arrow").hide();
              } else {
                  $(_object).find(".inner .borderleft .arrow").show();
                  $(_object).find(".inner .borderright .arrow").show();
              }
              
              // positioning arrows
              $(_object).find(".inner .borderleft .arrow").offset({top: $(_object).parent().offset().top+14});
              $(_object).find(".inner .borderright .arrow").offset({top: $(_object).parent().offset().top+14});
          } else {
              // normal position
              $(_object).offset({top: $(_object).parent().offset().top-50});
              
              // show or hide arrows dedicated to their position in the viewport
              if($(_object).parent().offset().top - window.pageYOffset < 0) {
                  $(_object).find(".inner .borderleft .arrow").hide();
                  $(_object).find(".inner .borderright .arrow").hide();
              } else {
                  $(_object).find(".inner .borderleft .arrow").show();
                  $(_object).find(".inner .borderright .arrow").show();
              }
              
              // positioning arrows
              $(_object).find(".inner .borderleft .arrow").offset({top: $(_object).parent().offset().top+14});
              $(_object).find(".inner .borderright .arrow").offset({top: $(_object).parent().offset().top+14});
          }
          
          $(_object).css("display", "none");
      }
  }