<% unless request.xml_http_request? %>

<div class="toolbar-second buttons">
	<%= link_to _("Create New"), :action => 'new' %>
</div>

<% end %>


<% table_with_search_and_pagination :columns => [[_("User Login"), 'login'], _("Access Rights"), _("Documents"), _("Action")],
						   			:records => @users do |user| %>	

			<% content_tag :tr, :id => "user_#{user.id}" do %>
				<td><%= user.login %></td>
				<td>
					<ul>
					<% user.access_rights.each do |a| %>
						<li><%= a.to_s %></li>
					<% end %>
					</ul>					
				</td>
				<td>
					<ul>
						<li>Orders: <%= user.orders.size %></li>
						<li>Contracts: <%= user.contracts.size %></li>
					</ul>
				</td>
				<td class="buttons">
					<ul>
						<li><%= link_to icon_tag("magnifier") + _("Show"), :action => 'show', :id => user.id %></li>
						<li><%= link_to_remote _("Delete"),
										:url => admin_user_path(user),
										:confirm => _("Are you sure?"),
										:method => :delete %></li>
					</ul>
				</td>
			<% end %>

<% end %>

		