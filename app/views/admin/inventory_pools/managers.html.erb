

<% tableize @inventory_pool.managers,
		 :header => "Managers",
		 :generate_css => true do |manager| %>
		 
		<%= manager.login %>
		<br />
		<%= link_to _('Remove'),
					:action => 'remove_manager',
					:id => @inventory_pool,
					:manager_id => manager %>
<% end %>		 	

<hr />
<% # TODO 30** prevent submit if the form is still empty %>	
<% form_for [:admin, @inventory_pool], :url => { :action => 'add_manager' } do |f| %>

	<%= _("Add as manager") %>:
	<%= model_auto_completer ("query", nil, "inventory_pool[manager_id]", nil,
								{ :url => admin_users_path(:format => :auto_complete), :submit_on_return => true },
								{ :size => 40 },
								{ :method => :get, :select => :name }) %>


	<%= submit_tag 'Submit' %>
<% end %>


