
<% form_for [:admin, @inventory_pool], :url => { :action => 'add_manager' },
			:html => { :onsubmit => "return ($('is_selected').value == 1);" } do |f| %>
	<%= hidden_field_tag :is_selected, 0 %>
	<%= _("Add as manager") %>:
	<%= model_auto_completer("query", nil, "inventory_pool[manager_id]", nil,
								{ :url => admin_users_path(:format => :auto_complete), :submit_on_return => true, :after_update_element => "function(){ $('is_selected').value = 1; }" },
								{ :size => 40 },
								{ :method => :get, :select => :name }) %>


	<%= submit_tag 'Submit' %>
<% end %>

<br />

<% table :columns => [_("Login"), _("Action")],
		 :records => @inventory_pool.managers do |manager| %>	

			<tr>
				<td><%= manager.login %></td>
				<td class="buttons">
					<ul>
						<li><%= link_to _('Remove'),
									remove_manager_admin_inventory_pool_path(@inventory_pool, :manager_id => manager),
									:confirm => _("Are you sure?"),
									:method => :delete %></li>
					</ul>
				</td>
			</tr>


<% end %>
