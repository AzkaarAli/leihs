
<% tabnav :inventory_pool_edit do %>
	
<% tableize @inventory_pool.managers,
		 :header => "listing managers",
		 :generate_css => true do |manager| %>
		 
		<%= manager.login %>
		<br />
		<%= link_to _('Remove'),
					:action => 'remove_manager',
					:id => @inventory_pool,
					:manager_id => manager %>
<% end %>		 	

	<hr />
	<div id="search_query">
		<%= _("Add more managers") %>: <%= text_field_tag('search', _("search"),
							:onfocus => "this.value='';",
							:onchange => remote_function(:update => 'search_result',
														 :url => { :action => 'search_manager', :id => @inventory_pool },
														 :with => "'search=*' + value + '*'" )) %>
	</div>
	<div id="search_result">
	</div>
	

<% end %>