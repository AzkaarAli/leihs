<% unless request.xml_http_request? %>

<div class="toolbar-second buttons">
	<%= link_to _("Create New"), :action => 'new' %>
</div>

<% end %>


<% table_with_search_and_pagination :columns => ["", _("Model"), _("Inventory Code"), _("Serial Number"), _("Location"), _("Borrowable"), _("In stock?"), _("Action")],
						   			:records => @items do |item| %>	

			<tr>
				<td><%= link_to image_tag(item.model.image_thumb), admin_item_path(item) if item.model and item.model.image_thumb %></td>
				<td><%= item.model.name if item.model %></td>
				<td><%= item.inventory_code %></td>
				<td><%= item.serial_number %></td>
				<td><%= item.location.to_s if item.location %></td>
				<td><%= image_tag($layout_public_path + "/images/icons/" + (item.is_borrowable ? "accept": "delete") + ".png") %></td>
				<td><%= image_tag($layout_public_path + "/images/icons/" + (item.in_stock? ? "accept": "delete") + ".png") %></td>
				<td class="buttons" style="white-space: nowrap">
					<ul>
						<li><%= link_to _("Show"), admin_item_path(item) %></li>
						<li><%= link_to _("Delete"), admin_item_path(item),
										:confirm => _("Are you sure?"),
										:method => :delete %></li>
					</ul>
				</td>
			</tr>

<% end %>
