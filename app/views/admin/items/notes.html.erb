	
	<% # OPTIMIZE History validates_presence_of :user
	content_tag :ul do
		@item.histories.each do |h|
			content_tag :li do
				content_tag :h4 do %>
					<%= "#{h.user.login} -" if h.user %> <%= short_date h.created_at %>:
				<% end %>
				<%= h.text %>
			<% end
		end
	end %>

	<hr />
	
	<% form_tag url_for({ }) do %>
	   	<%= _("Note") %><br/>
		<%= text_area_tag 'note', nil, :size => "25x10" %>

		<%= submit_tag _("Submit") %>		
	<% end %>
	
		