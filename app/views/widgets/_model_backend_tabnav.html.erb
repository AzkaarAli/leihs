<i>Model</i>
<hr />

<% if @model.errors.size > 0 %>
	<ul style="border: 1px solid red; padding: 2px;">
	<% @model.errors.full_messages.each do |e| %>		
		<li><%= e %></li>
	<% end %>	
	</ul>
<% end %>			

<h2><%= image_tag(@model.images.first.public_filename(:thumb)) unless @model.images.empty? %>
	<%= @model.name %></h2>

<%  

render_tabnav :model_backend, 
              :generate_css => true do 

	add_tab do |t|
		t.named 'Model'
		t.links_to backend_model_path(@model)
		t.highlights_on :action => 'show'
	end

	add_tab do |t|
		t.named 'Items'
		t.links_to backend_model_items_path(@model)
		t.highlights_on :controller => 'backend/items', :action => 'index'
	end

	add_tab do |t|
		t.named 'Categories *'
		t.links_to :action => 'details', :id => @model.id
	end

	add_tab do |t|
		t.named 'Properties'
		t.links_to properties_backend_model_path(@model)
		t.highlights_on :action => 'properties'
	end

	add_tab do |t|
		t.named 'Accessories'
		t.links_to accessories_backend_model_path(@model)
		t.highlights_on :action => 'accessories'
	end

	add_tab do |t|
		t.named 'Images'
		t.links_to images_backend_model_path(@model)
		t.highlights_on :action => 'images'
	end

	add_tab do |t|
		t.named 'Compatibles *'
		t.links_to :action => 'compatibles', :id => @model.id
	end

	add_tab do |t|
		t.named 'Availability *'
		t.links_to :action => 'availability', :id => @model.id
	end


end 
%>