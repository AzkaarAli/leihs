<% if @model.errors.size > 0 %>
	<ul style="border: 1px solid red; padding: 2px;">
	<% @model.errors.full_messages.each do |e| %>		
		<li><%= e %></li>
	<% end %>	
	</ul>
<% end %>			

<h2><%= image_tag(@model.images.first.public_filename(:thumb)) unless @model.images.empty? %>
	<%= @model.name %></h2>

<%  

render_tabnav :model_edit, 
              :generate_css => true do 

	add_tab do |t|
		t.named 'Model'
		t.links_to :action => 'show', :id => @model.id
		t.html[:style] = "background-color: red;" if @model.name.blank? 
	end

	add_tab do |t|
		t.named 'Items'
		t.links_to :action => 'items', :id => @model.id
	end

	add_tab do |t|
		t.named 'Categories *'
		t.links_to :action => 'details', :id => @model.id
	end

	add_tab do |t|
		t.named 'Properties'
		t.links_to :action => 'properties', :id => @model.id
	end

	add_tab do |t|
		t.named 'Accessories'
		t.links_to :action => 'accessories', :id => @model.id
	end

	add_tab do |t|
		t.named 'Images'
		t.links_to :action => 'images', :id => @model.id
	end

	add_tab do |t|
		t.named 'Compatibles'
		t.links_to :action => 'compatibles', :id => @model.id
	end

	add_tab do |t|
		t.named 'Availability'
		t.links_to :action => 'availability', :id => @model.id
	end


end 
%>