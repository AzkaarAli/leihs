%li
  = link_to icon_tag("camera") + " " + _('Items') + " (#{current_inventory_pool.items.count})", backend_inventory_pool_items_path(current_inventory_pool)
  - if controller.controller_name == "items"
    %ul
      %li
        = link_to _('In Stock') + " (#{current_inventory_pool.items.in_stock.count})", backend_inventory_pool_items_path(current_inventory_pool, :filter => 'in_stock')
      %li
        = link_to _('Unallocated') + " (#{current_inventory_pool.own_items.unallocated.count})", backend_inventory_pool_items_path(:filter => 'unallocated')
      %li
        = link_to _('Broken') + " (#{current_inventory_pool.items.broken.count})", backend_inventory_pool_items_path(current_inventory_pool, :filter => 'broken')
      %li
        = link_to _('Incomplete') + " (#{current_inventory_pool.items.incomplete.count})", backend_inventory_pool_items_path(current_inventory_pool, :filter => 'incomplete')
      %li
        = link_to _('Unborrowable') + " (#{current_inventory_pool.items.unborrowable.count})", backend_inventory_pool_items_path(current_inventory_pool, :filter => 'unborrowable')
