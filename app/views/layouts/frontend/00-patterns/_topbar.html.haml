%section#topbar
  .borderleft
  .inner
    .light
    .logo
      = link_to "", root_path, :title=>_("Homepage")
      
    %nav.navigation
      %ul
        %li.seperator
        
        - if current_user.has_role?('manager', nil, false)
          %li.item
            = link_to _("Backend") , backend_path, :class=>"anchor"
          %li.seperator
          
        %li.item{:class => current_page?(:controller => 'users', :action => 'show') ? "active" : nil}
          = link_to current_user, user_path, :class => "anchor"
          
        %li.seperator
        
        %li.item{:class => request['controller'] == "inventory_pools" ? "active" : nil}
          = link_to _("Equipment Parks"), inventory_pools_path , :class => "anchor"
          .hover.parks
            .header
              .borderleft
              .borderright
            .inner
              .borderleft
              %ul
                - # TODO Franco: please add opening hours and address
                - current_user.inventory_pools.each do |ip|
                  %li
                    = link_to ip, :title => ip.name do
                      - unless ip.shortname.blank?
                        = truncate(ip.shortname, :length => 15)
                      - else
                        = truncate(ip.name, :length => 15)
                      %span.openinghours
                        = truncate("Today 9:30 - 12, 13 - 16 Uhr", :length => 38)
                      %span.address
                        = truncate("Austellungsstrasse 60, 8005 ZÃ¼rich", :length => 55)
                    - unless ip == current_user.inventory_pools.last
                      %hr
              .borderright
            .footer
              .borderleft
              .borderright
        
        %li.seperator
        
        %li.item.language
          = link_to "javascript: void(0)", :class => "anchor" do
            = current_user.language.name
            %span.speechbubble
          .hover.language
            .header
              .borderleft
              .borderright
            .inner
              .borderleft
              %ul
                - (Language.active_languages - [current_user.language]).each do |l|
                  %li
                    = link_to l.name, "?locale=#{l.locale_name}"
                    - unless l == (Language.active_languages - [current_user.language]).last
                      %hr
              .borderright
            .footer
              .borderleft
              .borderright
        
        %li.seperator
        
        %li.item
          = link_to _("Help"), "#", :class => "anchor"
          
        %li.seperator
        
        %li.item
          = link_to _("Logout"), "logout", :class => "anchor"  
        
    .borderright