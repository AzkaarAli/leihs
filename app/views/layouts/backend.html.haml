!!! 5
%html{:lang => "#{current_user.language.locale_name.dasherize}"}

  %head
    %meta{:charset => 'utf-8'}
    %title
      = yield :title
      = " - " unless (yield :title).blank?
      = "leihs Backend"
      
    = stylesheet_link_tag "backend", :media => "screen"
    = stylesheet_link_tag "print", :media => "print"
    = javascript_include_tag "backend"
    = favicon_link_tag "backend/favicon.ico", :type => "image/x-icon"
    = csrf_meta_tag
    = javascript_tag "i18n = i18n.locals['#{current_user.language.locale_name.dasherize}']";
    = javascript_tag "var current_inventory_pool = #{current_inventory_pool.try(:id)}";
    = javascript_tag "var local_currency_string = '#{LOCAL_CURRENCY_STRING}'";
    -if current_inventory_pool
      - start_screen = current_user.access_rights.detect{|x| x.inventory_pool_id == current_inventory_pool.id}.try(:start_screen)
    - start_screen ||= "undefined"
    = javascript_tag "var current_user = {id:#{current_user.try(:id)}, start_screen: \"#{ start_screen }\"}";
    = yield :head

  %body
    %header.wrapper= render :partial => "layouts/backend/topbar"
    
    %section#main.wrapper
      = render :partial => '/layouts/backend/tabs'
      = render :partial => '/layouts/frontend/content_box_head_fullwidth'
      = yield
      = render :partial => '/layouts/frontend/content_box_foot'
      .clear