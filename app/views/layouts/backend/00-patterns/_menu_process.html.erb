<% with = { :inventory_pool_id => current_inventory_pool.id }

content_tag :li do %>
	<%= link_to icon_tag("page") + " " + _('Orders'), backend_inventory_pool_orders_path(current_inventory_pool, :filter => 'submitted') %>
	<% content_tag :ul do
		content_tag :li do %>
			<%= link_to _('Pending') + " (#{current_inventory_pool.orders.submitted.count})", backend_inventory_pool_orders_path(current_inventory_pool, :filter => 'submitted') %>
			<%# OPTIMIZE 0501 search_count %>
			<%#= link_to _('Pending') + " (#{Order.sphinx_submitted.search(:with => with).total_entries})", backend_inventory_pool_orders_path(current_inventory_pool, :filter => 'submitted') %>
		<% end
		content_tag :li do %>
			<%= link_to _('Approved') + " (#{current_inventory_pool.orders.approved.count})", backend_inventory_pool_orders_path(current_inventory_pool, :filter => 'approved') %>
			<%# OPTIMIZE 0501 search_count %>
			<%#= link_to _('Approved') + " (#{Order.sphinx_approved.search(:with => with).total_entries})", backend_inventory_pool_orders_path(current_inventory_pool, :filter => 'approved') %>
		<% end
		content_tag :li do %>
			<%= link_to _('Rejected') + " (#{current_inventory_pool.orders.rejected.count})", backend_inventory_pool_orders_path(current_inventory_pool, :filter => 'rejected') %>
			<%# OPTIMIZE 0501 search_count %>
			<%#= link_to _('Rejected') + " (#{Order.sphinx_rejected.search(:with => with).total_entries})", backend_inventory_pool_orders_path(current_inventory_pool, :filter => 'rejected') %>
		<% end
	end if controller.controller_name == "orders"
end

