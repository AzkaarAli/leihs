<%
order = current_user.current_order
if order
%>

	<ul>
		
	<!-- start iterator -->
	<% for line in order.lines %>
		<li id="order_line_<%= line.id %>" style="border: 1px solid black; margin: 2px; padding: 1px;">
			<%= line.quantity %>x <%= line.model.name[0,30] %>
		</li>
	<% end %>
	<!-- end iterator -->

	</ul>

	<br />
	<%= link_to "Complete order", :controller => 'orders', :action => 'new' %>

<% end %>
