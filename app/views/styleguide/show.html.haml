!!! 5
%html
  %head
    %meta{:charset => 'utf-8'}
    %title= "Styleguide | leihs"
    = stylesheet_link_tag "application"

  %body

    .wrapper

      %h1.headline-xxl.padding-vertical-l Styleguide
      
      .inline-tab-item.active General
      .inline-tab-item Definitions
      .inline-tab-item Components
      .inline-tab-item Combos

      .padding-bottom-m
        .content-wrapper.straight-top.padding-inset-m

          .padding-vertical-l
            - @sections[:general].each do |section|
              %a.button{:href => "##{section}"}= section.camelize

          - @sections[:general].each do |section|
            %h2.headline-l.padding-vertical-l.separated-bottom.margin-bottom-m.margin-top-xl
              %a{:name => "#{section}"}= section.camelize
            = render :partial => "styleguide/general/#{section}"