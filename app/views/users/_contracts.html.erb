<%	a = []
	@user.contracts.all(:conditions => ['status_const != ?', Contract::UNSIGNED]).sort.each {|c| a << [c.id, c.created_at, c.status_string, c.inventory_pool.name]}
%>
    var contracts_grid = new Ext.grid.GridPanel({
							title: '<%= _("Contracts (%d)") % a.size %>',
							autoHeight: true,
							height: 'auto',
							border: false,
							viewConfig: { forceFit: true },
							store: new Ext.data.SimpleStore({
										 fields: [	{name: 'id', type: 'int'},
	   											  	{name: 'created_at', type: 'date' },
													{name: 'status', type: 'string'},
													{name: 'inventory_pool.name', type: 'string'} ],
										 data: <%= a.to_json %>
										}),
					        cm:  new Ext.grid.ColumnModel([
									{
							           header: "Inventory Pool",
							           dataIndex: 'inventory_pool.name',
									   width: 40
									},{
							           header: "ID",
							           dataIndex: 'id',
									   width: 20
									},{
							           header: "Date",
							           dataIndex: 'created_at',
									   width: 80,
									   renderer: function(value,p,r){ return formatDate(value); }
									},{
							           header: "Status",
							           dataIndex: 'status',
									   width: 80
									}]),
							listeners: {
								rowclick: function( grid, rowIndex, e ){
									record = grid.getStore().getAt(rowIndex);
									add_contract_details(record.data.id);
								}
							},
					        tbar: ['->',
								new Ext.Action({
							        text: '<%= _("Timeline Contracts") %>',
									iconCls:'bt',
						            icon:'<%= icon_path('shape_align_left') %>',
							        handler: function(){
										account_panel.add(user_timeline);
							            Ext.getDom('user_timeline').innerHTML = "<iframe src='/user/timeline' width='100%' height='500' frameborder='0'></iframe>";
										account_panel.activate(user_timeline);
							        }
							    })
					        ]
	                    });

