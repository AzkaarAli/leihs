	var ContractLine = Ext.data.Record.create([
	   {name: 'contract_id', type: 'int'},
	   {name: 'quantity', type: 'int'},
	   {name: 'start_date', type: 'date'},
	   {name: 'end_date', type: 'date'},
	   {name: 'model'},
