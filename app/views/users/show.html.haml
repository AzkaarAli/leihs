= render :partial => '/layouts/frontend/00-patterns/tabs'
= render :partial => '/layouts/frontend/00-patterns/content_box_head'

#user.inner

  %section.userdata
    %h1
      = @user.name
    %p.subtitle
      = _("You can edit your personal data")
      = link_to _("here"), "#"
    %hr
    
    %dl
      %dt= _("Address")
      %dd
        = @user.address
        %br
        = @user.zip
        = @user.city
        %br
        =  @user.country
        
    %dl
      %dt= _("Mobile")
      %dd
        = @user.phone
        
    %dl
      %dt= _("Phone")
      %dd
        = @user.phone
        
    %dl
      %dt= _("E-Mail")
      %dd
        = @user.email
        
    .clear
    
  -unless current_user.contract_lines.to_remind.empty?
    %hr
    %h3.red
      %strong= _("Overdue Returns")
    %ul.linelist.overdue
      -current_user.contract_lines.to_remind.each do |o|
        %li.line
          %ul
            %li.time
              = short_date(o.start_date, true)
              = " - "
              = short_date(o.end_date, true)
            %li.name
              = o.model
              
  -unless current_user.contracts.signed.empty?
    %hr
    %h3
      = _("Rented Items")
    %ul.linelist
      -current_user.contracts.signed.each do |o|
        %li.line
          %ul
            %li.time
              = short_date(o.time_window_min, true)
              = " - "
              = short_date(o.time_window_max, true)
            %li.name
              = link_to lines_preview(o), user_contract_path(o)
            %li.action
              = link_to _("Extend"), "#"
              
  -unless current_user.orders.submitted.empty?
    %hr
    %h3
      = _("Orders")
    %ul.linelist
      -current_user.orders.submitted.each do |o|
        %li.line
          %ul
            %li.time
              = short_date(o.time_window_min, true)
              = " - "
              = short_date(o.time_window_max, true)
            %li.name
              = link_to o.purpose, user_order_path(o)
            %li.action
              = link_to _("Delete"), "#"
      
= render :partial => '/layouts/frontend/00-patterns/content_box_foot'
= render :partial => '/layouts/frontend/00-patterns/aside'