                    region:'west',
                    split:true,
                    width: 200,
                    minSize: 175,
                    maxSize: 300,
                    margins:'0 0 5 5',
					autoScroll:true,
                    layout:'accordion',
                    layoutConfig:{
                        animate:true
                    },
