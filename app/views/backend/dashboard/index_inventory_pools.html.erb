			
<div class="table-overview boxes">

		<%= render :partial => '/application/search' %>
	
		<div id="list_table">
			
		<table cellspacing="0">
			<tr>
				<th scope="col"><%= _("Name") %></th>
				<th scope="col"><%= _("Description") %></th>
				<th scope="col"><%= _("Items") %></th>
				<th scope="col">Aktion</th>
			</tr>

		<% for inventory_pool in @inventory_pools %>
			<tr>
				<td>
				<% if current_user.has_role?('inventory_manager', inventory_pool.id) %>
					<%= link_to inventory_pool.name, :controller => 'dashboard', :action => 'switch_inventory_pool', :id => inventory_pool.id %>
				<% else %>	
					<%= inventory_pool.name %>
				<% end %>
				</td>
				<td><%= inventory_pool.description %></td>
				<td><%= inventory_pool.items.size %></td>
				<td></td>
			</tr>
		<% end %>

		
		</table>
		





		</div>
			
						
</div>
			
