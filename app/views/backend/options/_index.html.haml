- if @start_date and @end_date
  = _("From")
  = short_date(@start_date)
  = ("to")
  = short_date(@end_date)

= table_with_search_and_pagination :columns => [_("Barcode"), _("Name"), _("Price"), _("Action")],
						   			:records => @options do |option|
  %tr
    %td= option.inventory_code
    %td= option.name
    %td= option.price
    %td.buttons
      - if params[:source_path]
        - var_id = "option_id"
        - glue = (params[:source_path].include?('?') ? '&' : '?' )
        - url = "#{params[:source_path]}#{glue}#{var_id}=#{option.id}"
        = link_to(icon_tag("package_add") + " " + _("Select"), url, :method => 'post', :target=> '_top')
      - else
        %ul
          %li= link_to icon_tag("magnifier") + _("Show"), {:action => 'show', :id => option}
    			%li= link_to _("Barcode"), {:controller => 'barcodes', :action => 'create', :string => option.inventory_code}, :method => :post
    			%li= link_to _("Delete"), {:action => 'destroy', :id => option}, :confirm => _("Are you sure?"), :method => :delete if option.option_lines.empty?
