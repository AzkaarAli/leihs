<% table_with_search_and_pagination :columns => [_("Received at"), _("Reserver"), _("Number of items"), _("Action")],
									:records => @visits do |visit| %>	


			<tr>
				<td>
					<%= short_date(visit.date) %>
				</td>
				<td>
					<%= greybox_link_to_page(visit.user.login,
							backend_inventory_pool_user_path(@current_inventory_pool, visit.user, :layout => "modal"),
							:title => _("User"),
							:class => "iconized-notxt edit-user" ) %>
				</td>
				<td><%= _("%{n} Items") % {:n => visit.quantity} %></td>
				<td style="width:200px" class="buttons">
					<%= link_to image_tag($layout_public_path + "/images/icons/tab_go.png") + _("Take Back"), [:backend, @current_inventory_pool, visit.user, :take_back] %>
				</td>
			</tr>

<% end %>
