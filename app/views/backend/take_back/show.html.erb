<div id='errors'>
	<%#TODO= render :partial => 'errors' %>
</div>


<div class="toolbar-main boxes">
	<div class="buttons">
		<%= greybox_link_to_page(image_tag($layout_public_path + "/images/icons/tab_go.png") + " " + _("Take Back"),
		 	{ :controller => 'take_back', :action => 'close_contract', :id => @user.id },
			:onmouseup => "change_href(this, 'contract_line', 'line');",
			:class => "multiple_selection_button",
			:title => _("Take Back") ) %>

		<%= link_to(image_tag($layout_public_path + "/images/icons/door.png") + " " + _("Close"),
								 { :controller => 'take_back' }) %>

	</div>
</div>


			
			<div id="meta" class="boxes">
				<div id="meta-contract">
					<table cellspacing="0">
						<tr class="alt-row">
							<td>
								<%= _("Reserver") %>
							</td> 
							<td>
								<%= greybox_link_to_page(@user.login,
									 { :controller => 'users', :action => 'details', :id => @user.id },
    								 :title => _("User"),
									 :class => "iconized-notxt edit-user" ) %>
								<br />
								<%= render :partial => 'backend/users/resume' %>
							</td>
						</tr>
					</table>	
				</div>
				
			</div>

			<div class="table-overview boxes">
								
				<div class="toolbar-second">
					<h3>Pakete</h3>
					<div class="buttons">
						<% # TODO temp timeline %>
						<%= greybox_link_to_page(image_tag($layout_public_path + "/images/icons/shape_align_left.png") + " " + _("Timeline"),
						 	{ :controller => 'take_back', :action => 'timeline', :id => @user.id },
							:title => _("Timeline"), :width => 1000 ) %>						
					</div>
				</div>
				
					<table cellspacing="0">
					<!-- start header -->
						<tr>
							<th scope="col">
								<input type="checkbox" id="contract_lines" onClick="mark_all(this, 'contract_line_check', 'multiple_selection_button');" /> <%= _("Alle Markieren") %>
								<br />
								<input type="checkbox" id="contract_lines" onClick="mark_all(this, 'contract_line_check_today', 'multiple_selection_button');" /> <%= _("Alle von Heute") %>
							</th>
							<th scope="col"><%= _("Contract") %></th>
							<th scope="col"><%= _("Paket") %></th>
							<th scope="col"><%= _("Zeitraum") %></th>
							<th scope="col">
								<%= _("Barcode") %>
								<br />
								<%= text_field_tag(:inventory_code, nil, { :size => 10, :onchange => remote_function( :url => { :action => 'assign_inventory_code', :id => @user.id }, :with => "'code=' + value" ) }) %>
							</th>
							<th scope="col"><%= _("Aktion") %></th>
						</tr>
					<!-- end header -->

					<!-- start iterator -->
					<% for @line in @contract_lines %>
						<%= render :partial => 'line' %>
					<% end %>
					<!-- end iterator -->						

						</table>
						
			</div>
			

