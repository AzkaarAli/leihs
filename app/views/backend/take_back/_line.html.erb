<div id="contract_line_<%= @line.id %>">
	<tr class="alt-row">
		<td>
			<% check_box_today = (@line.end_date <= Date.today ? "contract_line_check_today" : "")  %>
			<%= check_box_tag('contract_lines[]', @line.id, false, :id => "contract_line_check_#{@line.id}", :class => "contract_line_check #{check_box_today}", :onchange => "toggle_buttons('contract_line_check', 'multiple_selection_button');" ) %>
			<%= @line.quantity %>
		</td>
		<td>
			<%= @line.contract.id %>
		</td>
		<td>
			<%= greybox_link_to_page(@line.model.name,
					backend_inventory_pool_model_path(@current_inventory_pool, @line.model, :layout => "modal"),
					:title => _("Model"),
					:class => "thickbox iconized-notxt edit-package" ) %>
		</td>
		<td class="line_valid_<%= @line.available? %>">
			<%= "#{short_date(@line.start_date)} - #{short_date(@line.end_date)}" %>
		</td>
		<td id="inventory_code_<%= @line.id %>" class="line_valid_<%= @line.complete? %>">
			<%= greybox_link_to_page(@line.item.inventory_code,
				 backend_inventory_pool_item_path(@current_inventory_pool, @line.item), # TODO 22** render without layout
				 :title => _("Item"),
				 :class => "iconized-notxt" ) %>
		</td>
		<td class="buttons">
			<%= greybox_link_to_page(image_tag($layout_public_path + "/images/icons/flag_red.png") + " " + _("Broken"),
					 	{ :controller => 'take_back', :action => 'broken', :item_id => @line.item_id, :contract_id => @line.contract.id },
						:title => _("Broken"), :class => (@line.item.status_const == Item::UNBORROWABLE ? "negative" : "") ) %>
		</td>
	</tr>
</div>
