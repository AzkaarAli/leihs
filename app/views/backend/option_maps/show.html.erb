
<% form_for [:backend, @current_inventory_pool, @option_map] do |f| %>

	<table>
	<tr><td><b>Barcode:</b></td>
		<td><%= f.text_field :barcode %></td>
		<td class="buttons">
			<%= link_to _("Barcode"), {:controller => 'barcodes', :action => 'create', :string => @option_map.barcode}, :method => :post %>
		</td>
	</tr>	
	<tr><td><b>Text:</b></td><td><%= f.text_field :text %></td><td></td></tr>	
	</table>
	<%= submit_tag _("OK") %>
<% end %>
