<table>
	<tr>
	<th colspan="2"><%= image_tag($layout_public_path + "/images/icons/arrow_turn_right.png") + " #{title} " + _("Hand Over visits") %></th>
	</tr>
	
<% visits.each do |visit| %>	
	<tr>
		<td>
			<%= short_date(visit.date) %>
			<br />
			<b><%= visit.user.login %></b>
		</td>
		<td class="buttons">
			<%= link_to image_tag($layout_public_path + "/images/icons/tab_go.png"),
					backend_inventory_pool_user_hand_over_path(@current_inventory_pool, visit.user) %>
		</td>
	</tr>
<% end %>

</table>