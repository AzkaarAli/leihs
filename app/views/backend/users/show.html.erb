<% content_tag :table do
	content_tag :tr do
		content_tag :th do %>
			<%= _("Login") %>:
		<% end
		content_tag :td do %>
			<%= @user.login %>
		<% end
	end

	content_tag :tr do
		content_tag :th do %>
			<%= _("Name") %>:
		<% end
		content_tag :td do %>
			<%= @user.name %>
		<% end
	end

  content_tag :tr do
    content_tag :th do %>
      <%= _("Address") %>:
    <% end
    content_tag :td do %>
      <%= @user.address %>
    <% end
  end

  content_tag :tr do
    content_tag :th do %>
      <%= _("ZIP") + "/" + _("City") %>:
    <% end
    content_tag :td do %>
      <%= "#{@user.zip} #{@user.city}" %>
    <% end
  end

  content_tag :tr do
    content_tag :th do %>
      <%= _("Country") %>:
    <% end
    content_tag :td do %>
      <%= @user.country %>
    <% end
  end

	content_tag :tr do
		content_tag :th do %>
			<%= _("Email") %>:
		<% end
		content_tag :td do %>
			<%= mail_to @user.email %>
		<% end
	end

	content_tag :tr do
		content_tag :th do %>
			<%= _("Phone") %>:
		<% end
		content_tag :td do %>
			<%= @user.phone %>
		<% end
	end
		
	content_tag :tr do
		content_tag :th do %>
			<%= _("Badge ID") %>:
		<% end
		content_tag :td do %>
			<%= render :partial => "badge_id_form", :locals => { :user => @user } %>
		<% end
	end
end %>

<%= javascript_tag("$('badge_id').focus()") %>



<br/>

<% content_tag :ul, :class => "buttons" do

    content_tag :li do %>
      <%= link_to _("Edit"), [:edit, :backend, current_inventory_pool, @user].compact %>
    <% end if is_admin? or (current_inventory_pool and (is_inventory_manager? or is_lending_manager?))
    
    content_tag :li do %>
      <%= link_to _("New Contract"),
            new_contract_backend_inventory_pool_user_path(current_inventory_pool, @user.id),
            { :target => '_top' } %>
    <% end if current_inventory_pool and current_inventory_pool.users.include?(@user)
    
    content_tag :li do %>
	  <%= link_to icon_tag("email_edit") + _("Write Email"),
            new_backend_mail_path(:inventory_pool_id => current_inventory_pool.try(:id), :user_id => @user.id, :source_path => @source_path),
            { :target => '_top' } %>
    <% end 
  end %>

	<br/>
	<%= render :partial => 'resume' if current_inventory_pool %>

<br/>
<%= render :partial => "#{@user.authentication_system.class_name.underscore}" if @user.id %>


