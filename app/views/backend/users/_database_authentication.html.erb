<% group1 = %w(a e i o u y j)
   group2 = %w(b c d f g h k m n p q r s t v w x z)
%>

<% @dbauth = DatabaseAuthentication.new(:user => @user, :login => @user.login, :password => "#{group1[rand(group1.size)]}#{group2[rand(group2.size)]}#{group1[rand(group1.size)]}#{group2[rand(group2.size)]}#{group1[rand(group1.size)]}#{group2[rand(group2.size)]}#{group1[rand(group1.size)]}#{group2[rand(group2.size)]}")
  form_for :dbauth, :url => {:controller => 'authenticator/database_authentication', :action => 'change_password'}, :remote => true do |f|%>
<h3><%= _("Database Authentication") %></h3>
<%= f.hidden_field :user_id %>
<%= f.hidden_field :login %>
<table>
  <tr><td><%= _("New Password") %>:</td><td><%= f.text_field :password %></td><td><%= f.submit(_("Set Password")) %></td></tr>
</table>
<% end %>