<% content_tag :h3 do %>
	<%= _("Overbooking") %>
<% end %>

<% content_tag :table do
    content_tag :tr do
      [_("Model"),
       _("Period"),
       _("Overbooked Quantity")].each do |s|
        content_tag :th do %>
          <%= s %>  
        <% end
      end
    end

	last_model = nil
	@overbooking_changes.each do |ob|
		content_tag :tr do
			content_tag :td do %>
				<%= show_line_model(ob.model) if ob.model != last_model %>
			<% end
			content_tag :td do %>
	  			<%= dates_with_period(ob.start_date, @overbooking_changes.end_date_of(ob)) %>  
			<% end
			content_tag :td do %>
	  			<%= ob.available_quantity %>  
			<% end
		end
		last_model = ob.model
	end

end %>