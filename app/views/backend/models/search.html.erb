<div id="controller">
	<% form_tag( {} ) do %>
	<% params.each do |p| %>
		<%= hidden_field_tag(p[0], p[1]) unless p[0] == "query" %>
	<% end %>	
	<p>
	<%= text_field_tag 'query', params[:query] %>

	</p>
	<% end %>
</div>

<div class="search_results">
	<% if @search_result.nil? %>
		<p><%= _("No Search Results") %></p>
	<% else %>
		<table>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Aktion</th>
			</tr>
			
		<% @search_result.each do |result| %>
			<tr class="<%= cycle("alt-row", "fresh") -%>">
				<td class="row-closed"><%= result.name %></td>
				<td>
					<div class="buttons">
						<% if result.is_a?(Model)
							url = { :controller => '/' + params[:source_controller], :action => params[:source_action], :id => params[:document_id], :model_id => result.id, :line_id => params[:line_id] }
						else
							url = { :controller => '/' + params[:source_controller], :action => params[:source_action], :id => params[:document_id], :model_group_id => result.id, :line_id => params[:line_id] }
						end %>
						
						<%=	link_to(image_tag($layout_public_path + "/images/icons/#{get_action_image(params[:source_action])}.png") + " " + _(get_action_text(params[:source_action])),
				 			url,
							:method => 'post', :target=> '_top') %>
					</div>
				</td>
			</tr>
		<% end %>
		</table>
	<% end %>
</div>

<div class="buttons">
	<%=	cancel_popup_button(_("Cancel") ) %>
</div>