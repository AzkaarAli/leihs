<div id="controller">
	<% form_tag( {} ) do %>
	<% params.each do |p| %>
		<%= hidden_field_tag(p[0], p[1]) unless p[0] == "query" %>
	<% end %>	
	<p>
	<%= text_field_tag 'query', params[:query] %>

	</p>
	<% end %>
</div>

<div class="search_results">
	<% if @search_result.nil? %>
		<p><%= _("No Search Results") %></p>
	<% else %>
		<table>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Aktion</th>
			</tr>
			
		<% @search_result.each do |result| %>
			<tr class="<%= cycle("alt-row", "fresh") -%>">
				<td class="row-closed"><%= result.name %></td>
				<td class="buttons">
						<%
						var_id = (result.is_a?(Model) ? "model_id" : "model_group_id")
						glue = (params[:source_path].include?('?') ? '&' : '?' )
						url = "#{params[:source_path]}#{glue}#{var_id}=#{result.id}"
						%>
						
						<%# TODO 03** image and label #=	link_to(image_tag($layout_public_path + "/images/icons/#{get_action_image(params[:source_action])}.png") + " " + _(get_action_text(params[:source_action])), %>
						<%=	link_to(image_tag($layout_public_path + "/images/icons/package_add.png") + " " + _("Add"),
				 			url,
							:method => 'post', :target=> '_top') %>
				</td>
			</tr>
		<% end %>
		</table>
	<% end %>
</div>

<div class="buttons">
	<%=	cancel_popup_button(_("Cancel") ) %>
</div>