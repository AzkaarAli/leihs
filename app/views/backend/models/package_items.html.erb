<% unless @model.items.empty? %>

	<% tableize @model.package_items,
			 :header => "Items",
			 :generate_css => true do |i| %>
			 
			<b><%= i.model.name %></b>, <%= i.model.manufacturer %>, <%= i.inventory_code %>
			<br />
			<%= link_to _('Remove'),
						:action => 'remove_package_item',
						:id => @model,
						:item_id => i %>
	<% end %>		 	

	<hr />
	
	<% # TODO 30** prevent submit if the form is still empty %>	
	<% form_for [:backend, @model], :url => { :action => 'add_package_item' } do |f| %>

		<%= _("Add more items") %>:
		<%= model_auto_completer ("query", nil, "item_id", nil,
									{ :url => backend_inventory_pool_items_path(:format => :auto_complete), :submit_on_return => true },
									{ :size => 40 },
									{ :method => :get, :select => :name }) %>


		<%= submit_tag 'Submit' %>
	<% end %>

<% end %>
	