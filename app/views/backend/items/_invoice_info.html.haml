%tr
  %td.subtitle{:colspan => 2}
    %hr
    = _("Invoice Information")
%tr
  %td
    = _("Invoice Number")
    \:
  %td= (is_privileged_user? or @item.new_record?) ? f.text_field(:invoice_number) : @item.invoice_number
%tr
  %td
    = _("Invoice Date")
    \:
  %td= (is_privileged_user? or @item.new_record?) ? f.date_select(:invoice_date, :order => [:day, :month, :year]) : short_date(@item.invoice_date)
%tr
  %td
    = _("Initial Price")
    \:
  %td= (is_privileged_user? or @item.new_record?) ? f.text_field(:price) : (is_lending_manager? ? @item.price : "---")
%tr
  %td
    = _("Insurance Number")
    \:
  %td= (is_privileged_user? or @item.new_record?) ?  f.text_field(:insurance_number) : @item.insurance_number
%tr
  %td
    = _("Supplier")
    \:
  %td
    #supplier_name= @item.supplier.name if @item.supplier
    = f.hidden_field :supplier_id
    = (is_privileged_user? or @item.new_record?) ? greybox_link(icon_tag('magnifier'), supplier_backend_inventory_pool_items_path(current_inventory_pool), :title => _("Search Model"), :width => "800") : ""

- # !item.id.blank? ensures this is only shown for existing items, not unsaved items. Otherwise the form explodes
- # when creating a new item
- if !@item.id.blank? and is_privileged_user? and @item.owner_id == current_inventory_pool.id
  %tr
    %td
      = _("Retirement")
      \:
    %td.buttons
      = link_to (@item.retired ? _("Unretire") : _("Retire")), retire_backend_inventory_pool_model_item_path(current_inventory_pool, @item.model_id, @item)
