
	<ul>
		<li>
			<b>In stock?:</b>
			<% b = @item.in_stock? %>
			<%= icon_tag(b ? "accept": "delete") %>
			<%= @item.current_borrowing_info unless b %>
		</li>
	</ul>

	<br />

	<% form_for [:backend, @current_inventory_pool, @item.model, @item] do |f| %>
	<table style="width: 500px;">
		<tr><td><%= _("Working order") %>:</td><td><%= f.select :is_broken, {_("OK") => false, _("Broken") => true} %></td></tr>
		<tr><td><%= _("Completeness") %>:</td><td><%= f.select :is_incomplete, {_("OK") => false, _("Incomplete") => true} %></td></tr>
		<tr><td><%= _("Borrowable") %>:</td><td><%= f.select :is_borrowable, {_("OK") => true, _("Unborrowable") => false} %></td></tr>
	
		<tr><td colspan="2">
			<%= f.submit _("Submit") %>
		</td></tr>
	</table>
	<% end %>


	<br />
	
