#item.form_edit.innercontent.edit.prevent-scanner-submit
  = form_tag backend_inventory_pool_items_path(current_inventory_pool), method: :post do
    .indent
      .content_navigation
        %a.button.red{:href => backend_inventory_pool_models_path(current_inventory_pool)}
          = _("Cancel")
        #approve.multibutton
          .alternatives
            .trigger.green
              .arrow
            %button.button.green{:type => :submit, name: :copy}
              = _("Save and copy")
          %button.button.green{:type => :submit}
            = _("Save %s") % _("Item")

      .top
        %h1= _("Create copied item")

      .left
      .right
      .clear

:coffeescript
  notice = #{flash[:notice].to_json}
  error = #{flash[:error].to_json}

  jQuery ->
    if notice
      Notification.add_headline
        text: notice
        type: "success"

    if error
      Notification.add_headline
        text: error
        type: "error"

    new App.EditItemController #{json_for Field.accessible_by(current_user, current_inventory_pool)}, #{json_for(@item, {:preset => :item_edit, name: false, serial_number: false})}
