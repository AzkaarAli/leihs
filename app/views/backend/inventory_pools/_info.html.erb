
<table>
	<% form_for [:backend, current_inventory_pool] do |f| %>
	<tr><td><b><%= _("Name") %>:</b> </td><td><%= is_inventory_manager? ? f.text_field(:name) : current_inventory_pool.name %></td></tr>
	<tr><td><b><%= _("Short Name") %>:</b> </td><td><%= is_inventory_manager? ? f.text_field(:shortname) : current_inventory_pool.shortname %></td></tr>	
	<tr><td><b><%= _("Email") %>:</b></td><td><%= is_inventory_manager? ? f.text_field(:email) : current_inventory_pool.email %></td></tr>
	<tr><td><b><%= _("Description") %>:</b></td><td><%= is_inventory_manager? ? f.text_area(:description, :rows => 6, :cols => 50) : current_inventory_pool.description %></td></tr>	
	<tr><td><b><%= _("Default contract note") %>:</b></td><td><%= is_inventory_manager? ? f.text_area(:default_contract_note, :rows => 6, :cols => 50) : current_inventory_pool.default_contract_note %></td></tr>
	<tr><td><b><%= _("Menu background color") %>:</b></td><td><%= is_inventory_manager? ? f.text_field(:color) : current_inventory_pool.color %></td></td>
	<tr><td><%= submit_tag 'Submit' %></td><td></td></tr>
	<% end %>
</table>