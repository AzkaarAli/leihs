<%= form_for [:backend, @inventory_pool] do |f| %>
	<table>	
		<tr><td><b><%= _("Name") %>:</b></td><td><%= f.text_field :name %></td></tr> 	
		<tr><td><b><%= _("Short Name") %>:</b></td><td><%= f.text_field :shortname %></td></tr> 	
		<tr><td><b><%= _("Email") %>:</b></td><td><%= f.text_field :email %></td></tr>
		<tr><td><b><%= _("Description") %>:</b></td><td><%= f.text_area :description, :rows => 6, :cols => 50 %></td></tr> 
		<tr><td><b><%= _("Default contract note") %>:</b></td><td><%= f.text_area :default_contract_note, :rows => 6, :cols => 50 %></td></tr> 
		<tr><td><%= submit_tag 'Submit' %></td><td></td></tr>
	</table>
<% end if is_admin? %>