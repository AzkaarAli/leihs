<table>
	<tr>
	<th colspan="2"><%= image_tag($layout_public_path + "/images/icons/accept.png") + " " + _("Pending orders") %></th>
	</tr>
	
<% orders.each do |order| %>	
	<tr>
		<td>
			<%= today_or_yesterday_date(order.created_at) %>
			<br />
			<b><%= order.user.login %></b>
		</td>
		<td class="buttons">
			<%= link_to image_tag($layout_public_path + "/images/icons/tab_go.png"),
					backend_inventory_pool_user_acknowledge_path(@current_inventory_pool, order.user, order) %>
		</td>
	</tr>
<% end %>

</table>