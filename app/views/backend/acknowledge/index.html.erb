<% unless request.xml_http_request? %>

<div id="meta" class="boxes">
	<h2><%= _("<em>%{n} new orders</em> to acknowledge.") % { :n => @submitted_orders.size } %></h2>
</div>

	<% unless @working_orders.empty? %>		
		<div id="drafts" class="boxes buttons">
			<p style="float: left; line-height: 30px; margin-right: 20px;"><%= _("Orders you are editing (please complete)") %>:</p>
			<% for order in @working_orders %>
				<%=	link_to(icon_tag("tab_go") + "#{order.user.login} (#{today_or_yesterday_date(order.backup.updated_at)})",
							backend_inventory_pool_user_acknowledge_path(@current_inventory_pool, order.user, order)) %>
			<% end %>
		</div>
	<% end %>

<% end %>			


<% table_with_search_and_pagination :columns => [_("Received at"), _("Reserver"), _("Number of items"), _("Time window"), _("Action")],
						   			:records => @orders do |order| %>	


			<tr class="<%= (order.has_backup? ? "alt-row" : "fresh" ) %>">
				<td>
					<%= today_or_yesterday_date(order.created_at) %>
				</td>
				<td>
					<%= greybox_link_to_page(order.user.login,
							backend_inventory_pool_user_path(@current_inventory_pool, order.user, :layout => "modal"),
							 :title => _("User"),
							 :class => "iconized-notxt edit-user" ) %>
				</td>
				<td><%= _("%{n} Items") % {:n => order.quantity} %></td>
				<td><%= dates_with_period(order.time_window_min, order.time_window_max) %></td>
				<td class="buttons">
					<%= link_to icon_tag("tab_go") + _("View + Acknowledge"),
							backend_inventory_pool_user_acknowledge_path(@current_inventory_pool, order.user, order) %>
				</td>
			</tr>

<% end %>

			
