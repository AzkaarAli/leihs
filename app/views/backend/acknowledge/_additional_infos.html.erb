<div id="meta-tabs">
	
	<div id="meta-tabs-container">
		<ul>
			<li class="active"><%= link_to_function(_("Changes"), nil) do |page|
									    page.visual_effect :toggle_slide, 'meta-tabs-content'
									end %></li>
		</ul>
		<div id="meta-tabs-content" style="display: none;">
			<div id="changes">
				<ul>
					<% @order.histories.reverse.each do |history| %>
						<li>
							<b>[<%= short_time(history.created_at) %>]</b>
							<br /><%= history.text %>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
	
</div>